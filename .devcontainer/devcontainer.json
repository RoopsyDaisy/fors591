{
  "name": "${localWorkspaceFolderBasename}",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--device=nvidia.com/gpu=all",
    "--security-opt",
    "label=disable",
    "--userns=keep-id"
  ],
  "remoteUser": "vscode",
  "mounts": [
    "source=/run/media,target=/run/media,type=bind,consistency=cached",
    "source=/run/data_raid5,target=/run/data_raid5,type=bind,consistency=cached"
  ],
  "postCreateCommand": "uv sync --extra dev && Rscript -e \"renv::restore()\" && uv run python scripts/check_env.py && (Rscript scripts/check_r_env.R || echo 'R check had warnings - see above')",
  "postStartCommand": "uv sync --extra dev --quiet",
  "customizations": {
    "vscode": {
      "settings": {
        // Python interpreter (uv creates .venv)
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.locator": "native",
        // Jupyter Interactive Window
        "python.dataScience.sendSelectionToInteractiveWindow": true,
        "jupyter.interactiveWindow.mode": "perFile",
        // Terminal defaults
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        },
        // Formatting (black 88 chars, ruff for linting)
        "editor.formatOnSave": true,
        "python.formatting.provider": "black",
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.rulers": [
            88
          ]
        },
        // R settings
        "r.bracketedPaste": true,
        "r.plot.useHttpgd": true,
        "[r]": {
          "editor.defaultFormatter": "REditorSupport.r"
        }
      },
      "extensions": [
        // Core Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        // Jupyter
        "ms-toolsai.jupyter",
        "ms-toolsai.vscode-jupyter-cell-tags",
        // Utilities
        "mechatroner.rainbow-csv",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        // Git
        "eamodio.gitlens",
        // R language support
        "REditorSupport.r"
      ]
    }
  }
}